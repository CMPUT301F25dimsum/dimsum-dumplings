<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.lotteryapp.reusecomponent.EditableImage
        android:id="@+id/fragment_organizer_create_banner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="#4444"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_close">

    </com.example.lotteryapp.reusecomponent.EditableImage>

    <TextView
        android:id="@+id/fragment_event_display_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="Placeholder Title"
        android:inputType="text"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/fragment_event_display_organizer"
        app:layout_constraintHorizontal_bias="0.014"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_banner">

    </TextView>

    <TextView
        android:id="@+id/fragment_event_display_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="#Filters#separated#by#hashtag"
        android:inputType="text"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_title" />

    <TextView
        android:id="@+id/fragment_event_display_organizer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Organizer"
        android:inputType="text"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_banner" />

    <TextView
        android:id="@+id/fragment_event_display_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:hint="Status"
        android:inputType="text"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_organizer" />

    <TextView
        android:id="@+id/fragment_event_display_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Location: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_date_text">

    </TextView>

    <TextView
        android:id="@+id/fragment_event_display_deadline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Registration Deadline:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_location_text">

    </TextView>

    <TextView
        android:id="@+id/fragment_event_display_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:hint="Event Location"
        android:inputType="text"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_event_display_location_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_date" />

    <TextView
        android:id="@+id/fragment_event_display_reg_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:hint="Deadline"
        android:inputType="text"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_event_display_deadline_text"
        app:layout_constraintTop_toTopOf="@+id/fragment_event_display_deadline_text" />

    <TextView
        android:id="@+id/fragment_event_display_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="18dp"
        android:focusable="false"
        android:hint="Event Date..."
        android:inputType="text"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_event_display_date_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_filter" />

    <TextView
        android:id="@+id/fragment_event_display_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Event Date: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_filter">

    </TextView>

    <TextView
        android:id="@+id/fragment_event_display_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="Close X"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/fragment_event_display_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:hint="\#/\#"
        android:inputType="number"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_status">

    </TextView>

    <TextView
        android:id="@+id/fragment_organizer_create_description"
        android:layout_width="392dp"
        android:layout_height="172dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="10dp"
        android:gravity="top|start"
        android:hint="[Insert Description]"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:minLines="4"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_deadline_text">

    </TextView>

    <Button
        android:id="@+id/fragment_event_display_register_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="20dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_description" />

    <Button
        android:id="@+id/fragment_event_display_cancel_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:text="Cancel Registration"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fragment_event_display_register_button"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/fragment_event_display_register_button"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_register_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
