<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.lotteryapp.reusecomponent.EditableImage
        android:id="@+id/fragment_organizer_create_banner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#4444">

    </com.example.lotteryapp.reusecomponent.EditableImage>

    <EditText
        android:id="@+id/fragment_organizer_create_title"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:inputType="text"
        android:hint="Add Title"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_banner">

    </EditText>

    <EditText
        android:id="@+id/fragment_organizer_create_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:hint="#Filters#separated#by#hashtag"
        android:inputType="text"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_title" />

    <TextView
        android:id="@+id/fragment_organizer_create_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="Location: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_filter">

    </TextView>

    <TextView
        android:id="@+id/fragment_organizer_create_event_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Date: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_location_text">

    </TextView>

    <EditText
        android:id="@+id/fragment_organizer_create_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:hint="Add location..."
        android:inputType="text"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_organizer_create_location_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_filter" />

    <EditText
        android:id="@+id/fragment_organizer_create_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:hint="Set Date..."
        android:focusable="false"
        android:inputType="text"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_organizer_create_event_date_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_location" />

    <TextView
        android:id="@+id/fragment_organizer_create_lottery_size_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="116dp"
        android:text="Lottery Size: "
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_filter" />

    <EditText
        android:id="@+id/fragment_organizer_create_lottery_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="\#"
        android:textSize="12dp"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/fragment_organizer_create_lottery_size_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_filter">

    </EditText>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/fragment_organizer_create_limited_waiting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:checked="true"
        android:text="Limited Waiting? "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_deadline_text">

    </androidx.appcompat.widget.SwitchCompat>

    <EditText
        android:id="@+id/fragment_organizer_create_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="76dp"
        android:hint="Add deadline..."
        android:focusable="false"
        android:inputType="datetime"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_organizer_create_deadline_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_filter" />

    <TextView
        android:id="@+id/fragment_organizer_create_lim_waiting_size_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Size: "
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fragment_organizer_create_limited_waiting"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_deadline" />

    <TextView
        android:id="@+id/fragment_organizer_create_deadline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:text="Registration Deadline: "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_location">

    </TextView>

    <EditText
        android:id="@+id/fragment_organizer_create_lim_waiting_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:hint="\#"
        android:inputType="number"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_organizer_create_lim_waiting_size_text"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_deadline">

    </EditText>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/fragment_organizer_create_require_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:checked="false"
        android:text="Require Location? "
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_limited_waiting">

    </androidx.appcompat.widget.SwitchCompat>

    <EditText
        android:id="@+id/fragment_event_display_description"
        android:layout_width="392dp"
        android:layout_height="172dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:inputType="textMultiLine"
        android:hint="[Insert Description]"
        android:gravity="top|start"
        android:scrollbars="vertical"
        android:minLines="4"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_require_location">

    </EditText>

    <Button
        android:id="@+id/fragment_organizer_create_conf_button"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Create"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_organizer_create_invalid_event_text" />

    <TextView
        android:id="@+id/fragment_organizer_create_invalid_event_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Invalid String"
        android:textColor="#F80707"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_event_display_description" />

</androidx.constraintlayout.widget.ConstraintLayout>
