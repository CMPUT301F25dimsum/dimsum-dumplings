<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            app:hintEnabled="true"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#FFE0E0E0"
            app:boxCornerRadiusTopStart="6dp"
            app:boxCornerRadiusTopEnd="6dp"
            app:boxCornerRadiusBottomStart="6dp"
            app:boxCornerRadiusBottomEnd="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ua_email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="textEmailAddress"
                android:background="@android:color/transparent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Email button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ua_btn_email_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Confirm Email"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:cornerRadius="24dp" />

        <!-- Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Name"
            app:hintEnabled="true"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#FFE0E0E0"
            app:boxCornerRadiusTopStart="6dp"
            app:boxCornerRadiusTopEnd="6dp"
            app:boxCornerRadiusBottomStart="6dp"
            app:boxCornerRadiusBottomEnd="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ua_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Phone Number"
            app:hintEnabled="true"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#FFE0E0E0"
            app:boxCornerRadiusTopStart="6dp"
            app:boxCornerRadiusTopEnd="6dp"
            app:boxCornerRadiusBottomStart="6dp"
            app:boxCornerRadiusBottomEnd="6dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ua_phone"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:inputType="phone"
                android:background="@android:color/transparent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Contact button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ua_btn_contact_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Confirm Contact"
            android:textAllCaps="false"
            android:textStyle="bold"
            app:cornerRadius="24dp" />

    </LinearLayout>
</ScrollView>
